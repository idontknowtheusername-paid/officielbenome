# ============================================================================
# CONFIGURATION MAXIMARKET
# ============================================================================

# Supabase - Base de données et authentification
VITE_SUPABASE_URL=https://votre-projet.supabase.co
VITE_SUPABASE_ANON_KEY=votre_cle_anon_supabase
SUPABASE_SERVICE_ROLE_KEY=votre_cle_service_role

# Lygos - Système de paiement Mobile Money (OBLIGATOIRE pour les boosts)
VITE_LYGOS_API_KEY=votre_cle_api_lygos
VITE_LYGOS_WEBHOOK_SECRET=votre_secret_webhook_lygos

# Brevo (ex-Sendinblue) - Emails transactionnels et newsletters
VITE_BREVO_API_KEY=votre_cle_api_brevo

# Kkiapay - Alternative de paiement (optionnel)
VITE_KKIAPAY_PUBLIC_KEY=votre_cle_publique_kkiapay
VITE_KKIAPAY_SECRET_KEY=votre_cle_secrete_kkiapay

# SendGrid - Alternative pour emails (optionnel si Brevo est configuré)
VITE_SENDGRID_API_KEY=votre_cle_api_sendgrid
VITE_FROM_EMAIL=noreply@maximarket.com
VITE_FROM_NAME=MaxiMarket

# Mistral AI - Chatbot AIDA
VITE_MISTRAL_API_KEY=votre_cle_api_mistral

# VAPID Keys - Notifications push
VITE_VAPID_PUBLIC_KEY=votre_cle_publique_vapid

# Configuration de l'application
VITE_APP_NAME=MaxiMarket
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:30001
VITE_ENV=development

# Google Maps (optionnel)
VITE_GOOGLE_MAPS_API_KEY=votre_cle_api_google_maps

# Cloudinary (optionnel)
VITE_CLOUDINARY_CLOUD_NAME=votre_cloud_name
VITE_CLOUDINARY_UPLOAD_PRESET=votre_upload_preset

# Sentry (optionnel)
VITE_SENTRY_DSN=votre_dsn_sentry
